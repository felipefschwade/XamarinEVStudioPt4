<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AluracarPCL.Views.AgendamentosUsuariosView">
    <ContentPage.Content>
        <StackLayout Margin="25">
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <ListView x:Name="listViewAgendamentos" ItemsSource="{Binding Agendamentos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Spacing="10" Orientation="Horizontal">
                                <Label Text="{Binding Modelo}" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                <Label Text=" - " VerticalTextAlignment="Center"/>
                                <Label Text="{Binding DataFormatada}" FontSize="20" VerticalTextAlignment="Center"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>